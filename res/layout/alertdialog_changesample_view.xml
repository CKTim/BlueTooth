<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_oldSampleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="小白菜"
        android:textColor="@color/black"
        android:textSize="19dp" />

    <ImageView
        android:id="@+id/iv_detection"
        android:layout_width="15dp"
        android:layout_height="35dp"
        android:layout_below="@+id/tv_oldSampleName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/two_arrow" />

    <EditText
        android:id="@+id/et_changeSample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_detection"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:hint="请输入要修改的样品"
        android:maxLength="3"
        android:textColorHint="@color/lightGray"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/et_changeSample"
        android:layout_marginBottom="27dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/selector_btn_click2"
        android:text="确定修改"
        android:textColor="@color/white" />

</RelativeLayout>