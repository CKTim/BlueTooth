<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_UDP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="27dp"
        android:text="UDP服务器设置"
        android:textColor="@color/black"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/tv_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_UDP"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        android:text="端口号"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/et_port"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_port"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="number"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_port"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        android:text="IP"
        android:textSize="15dp" />

    <LinearLayout
        android:id="@+id/ln_ip"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_ip"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_ip1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:inputType="number"
            android:maxLength="3"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_ip2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="—" />

        <EditText
            android:id="@+id/et_ip3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:inputType="number"
            android:maxLength="3"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_ip4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="—" />

        <EditText
            android:id="@+id/et_ip5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:inputType="number"
            android:maxLength="3"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_ip6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="—" />

        <EditText
            android:id="@+id/et_ip7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:inputType="number"
            android:maxLength="3"
            android:textSize="13dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/ln_ip"
        android:layout_marginBottom="27dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_btn_click2"
        android:text="确定"
        android:textColor="@color/white" />

</RelativeLayout>