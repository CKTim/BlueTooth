<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_clock"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="@drawable/bg_clock" />

    <TextView
        android:id="@+id/tv_displayTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_clock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btn_customTime"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_displayTime"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/selector_btn_click2"
        android:text="自定义仪器时间"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_synchronizationNowTime"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/btn_customTime"
        android:layout_marginBottom="27dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_btn_click2"
        android:text="同步当前时间到仪器"
        android:textColor="@color/white" />

</RelativeLayout>