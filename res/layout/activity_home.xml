<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_home_head"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@color/lightBlue" >

        <Button
            android:id="@+id/btn_homeBack"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/home_return" />

        <TextView
            android:id="@+id/tv_deviceName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180dp"
            android:text="LZ-4000(T)"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/tv_deviceName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_deviceName1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="农药残留快速检测仪"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <Button
            android:id="@+id/btn_connected"
            android:layout_width="75dp"
            android:layout_height="26dp"
            android:layout_below="@+id/tv_deviceName2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@null" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_home_bottom"
        android:layout_width="match_parent"
               android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/btn_SampleDetection"
                android:layout_width="66dp"
                android:layout_height="92dp"
                android:layout_centerInParent="true"
                android:background="@drawable/detection_uncheck" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/btn_QueryRecord"
                android:layout_width="66dp"
                android:layout_height="92dp"
                android:layout_centerInParent="true"
                android:background="@drawable/record_uncheck" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/btn_SystemSettings"
                android:layout_width="66dp"
                android:layout_height="92dp"
                android:layout_centerInParent="true"
                android:background="@drawable/setup_uncheck" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>